{
  "manifest_version": 3,
  "name": "Dev Mini Toolbar",
  "version": "0.2.0",
  "description": "Minimal floating toolbar for common dev actions",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}